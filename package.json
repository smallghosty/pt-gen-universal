{
    "name": "pt-gen-universal",
    "version": "2.0.0",
    "description": "PT-Gen on server and serverless platforms",
    "main": "src/adapters/cloudflare.js",
    "type": "module",
    "scripts": {
        "dev:cf": "wrangler dev",
        "dev:bun": "bun --hot src/adapters/bun.js",
        "dev:node": "node --env-file=.env --watch src/adapters/node.js",
        "build:cf": "wrangler deploy",
        "start:bun": "bun src/adapters/bun.js",
        "start:node": "node --env-file=.env src/adapters/node.js",
        "build": "wrangler build",
        "preview": "wrangler preview",
        "publish": "wrangler publish",
        "deploy": "wrangler deploy",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run"
    },
    "engines": {
        "node": ">=20.6.0",
        "bun": ">=1.0.0"
    },
    "author": "YunFeng <YunFengZero@outlook.com>",
    "forkedFrom": "github.com/Rhilip/pt-gen-cfworker",
    "contributors": [
        "Rhilip <rhilipruan@gmail.com>"
    ],
    "license": "MIT",
    "dependencies": {
        "@hono/node-server": "^1.13.7",
        "cheerio": "^1.1.2",
        "hono": "^4.11.4",
        "html2bbcode": "^1.2.6"
    },
    "devDependencies": {
        "vitest": "^4.0.17",
        "wrangler": "^4.65.0"
    },
    "overrides": {
        "entities": "^7.0.0",
        "undici": "^7.18.2"
    }
}